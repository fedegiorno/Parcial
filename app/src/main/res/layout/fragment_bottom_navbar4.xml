<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cnlNavBar4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InfoCIIEActivity">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtNavBarCIIE4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Centro de Investigaciones Educativas"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLugar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VICENTE LOPEZ"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNavBarCIIE4" />

    <ImageView
        android:id="@+id/imageView"
        android:contentDescription="Mapa Vicente Lopez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/partidodevicentelopez"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNavBarCIIE4" />

</androidx.constraintlayout.widget.ConstraintLayout>