<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cnlNavBar2"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.">

<TextView
    android:id="@+id/txtNavBarCIIE2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="Centro de Investigaciones Educativas"
    android:textStyle="bold"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/txtLugar2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SAN ISIDRO"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtNavBarCIIE2" />

<ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:contentDescription="Mapa San Isidro"
    android:layout_height="wrap_content"
    android:src="@drawable/partidodesanisidro"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtNavBarCIIE2" />

</androidx.constraintlayout.widget.ConstraintLayout>